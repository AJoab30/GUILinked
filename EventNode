class EventNode {
    String name;        // Event name
    String date;        // Event date (e.g., "2024-09-06")
    String time;        // Event time (e.g., "14:00")
    String description; // Event description
    EventNode next;     // Pointer to the next event
    EventNode prev;     // Pointer to the previous event

    // Constructor
    public EventNode(String name, String date, String time, String description) {
        this.name = name;
        this.date = date;
        this.time = time;
        this.description = description;
        this.next = null;
        this.prev = null;
    }
}
